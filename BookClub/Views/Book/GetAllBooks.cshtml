@if (User.IsInRole("Admin"))
{
    <div class="row" id="addBookRow">
        <span>
            <button class="btn btn-success" id="addButton" onclick="location.href='@Url.Action("AddBook", "Admin")'">Add Book</button>
            @*@Html.ActionLink("Add Book", "AddBook", "Admin")*@
        </span>
    </div>
}

