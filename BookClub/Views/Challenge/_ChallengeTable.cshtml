@model IEnumerable<BookClub.Data.Models.Challenges>

<div id="progressBarComplete">
    <p>@(ViewBag.Percent)%</p>
    <div class="progress">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Until)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.Title)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.Completed)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                <div class="completedChallenge">@Html.DisplayFor(modelItem => item.Description)</div>
                }

            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Completed, new { id=item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Until)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/Custom_Scripts/AddCheckBoxListener.js"></script>

