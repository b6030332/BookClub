@using Microsoft.AspNet.Identity

@model BookClub.ViewModels.JointViewModels.GetPostViewModel

<div class="containter body-content">
    <div class="row postHeader">
        <div class="postHeading">
            <span class="postTitle">
                @Model.Posts.PostTitle
            </span>

            <h4>
                Go back to the
                @Html.ActionLink(Model.Posts.DiscussionName, "GetPostsByDiscussion",

             new { id = Model.Posts.DiscussionId , Controller = "Discussion" })
                discussion
            </h4>

        </div>
    </div>

    <div class="row" id="postContent">
        <div class="col-md-3 postAuthorContainer">
            @Html.ActionLink(Model.Posts.UserName, "Detail",

               new { id = Model.Posts.UserId, Controller = "Profile" })

            <span class="postData">@Model.Posts.DatePosted</span>
        </div>

        <div class="col-md-9 postContentContainer">
            <div class="postContent">
                @Html.Raw(Model.Posts.PostContent)
            </div>
        </div>

        <div class="deletePost">
            @if (Model.Posts.UserId == User.Identity.GetUserId())
            {
                @*@Html.ActionLink("Delete", "DeletePost",
            new { id = Model.Posts.PostId, Controller = "Post" })*@
                <a class="btn btn-danger btn-sm" onclick=Delete("+id+")><i class="fa fa-trash"></i>Delete</a>
            }
        </div>
    </div>

    <div class="row" id="replyDivide"></div>
    
    @if (User.Identity.IsAuthenticated)
    { 
    <div class="row" id="postReplyRow">
        <span>
            @Html.ActionLink("Post reply", "AddReply",

      new { id = Model.Posts.PostId, Controller = "Reply" })
        </span>
        
    </div>
    }

    @if (Model.Replies.Any())
    {
        foreach (var reply in Model.Replies)
        {
            <div class="row" id="replyContent">
                <div class="col-md-3 replyAuthorContainer">

                    @Html.ActionLink(reply.ReplyUserName, "Detail",

             new { id = reply.ReplyUserId, Controller = "Profile" })

                    <span class="postData">@reply.ReplyPosted</span>
                </div>


                <div class="col-md-9 replyContentContainer">
                    <div class="replypostContent">
                        @Html.Raw(reply.ReplyContent)
                    </div>
                </div>

                <div class="row" id="deleteReply"></div>
                @if (reply.ReplyUserId == User.Identity.GetUserId())
                {
                    <div class="row" id="deleteReplyRow">
                        <div>
                            @Html.ActionLink("Delete", "DeleteReply",

                      new { id = reply.Id , Controller = "Reply" })
                        </div>
                    </div>
                }

            </div>
        }

    }
    else
    {
        <div class="noPosts">

            <h3>
                There are no replies to this post. <br />

            </h3>

        </div>
    }
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>
    function Delete(id) {
        if (confirm('Are you sure you want to delte this post'))
        {
            $.ajax({
                type: "POST",
                url: '@Url.Action("DeletePost","Post")/' + id,
                success: function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                }
            });
        }
    }
</script>

